<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chenfanxiao.assignment2.contact_profile">
    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Title"
        android:layout_alignParentStart="true"
        android:id="@+id/text_Name"
        android:labelFor="@+id/Display_Name"
        />

    <TextView
        android:text="Contact Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:id="@+id/Title"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Display_Name"
        tools:style="@style/Widget.AppCompat.EditText"
        android:layout_below="@+id/text_Name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:textStyle="bold"/>

    <TextView
        android:text="Phone Number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_PhoneNumber"
        android:labelFor="@+id/Display_PhoneNumber"
        android:layout_below="@+id/Display_Name"
        android:layout_alignParentStart="true"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Display_PhoneNumber"
        tools:style="@style/Widget.AppCompat.EditText"
        android:layout_below="@+id/text_PhoneNumber"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:textStyle="bold"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ListView_Profile"
        android:layout_below="@+id/textView2" />

    <TextView
        android:text="Relationship:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Display_PhoneNumber"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

</RelativeLayout>
